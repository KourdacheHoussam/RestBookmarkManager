<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<!-- persistence-unit permet de spécifier un nom utilisable par l'interface
	EntityManagerFactory. Ce dernier est un objet factory qui permet de créer un 
	objet entityManager qui lui sauvegardera tout ce qui est  transactions, i-e sessions, config ...etc
	de la couche JPA. -->
	
	<persistence-unit name="bookmarkmanager" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>		
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
		
			<!-- afficher sur la sortie les opérations SQL exécutées -->			
			<property name="hibernate.show_sql" value="true" />			
			<property name="hibernate.format_sql" value="true" />
			
			<!--  spécifier à hibernate le dialect à choisir pour communiquer avec le serveur-->			
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect" />
			
			<!-- demande à hibernate d'actualiser le DDL au démarrage, à éviter dans le dev de prod  -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:tp"/>
      		<property name="javax.persistence.jdbc.user" value=""/>
      		<property name="javax.persistence.jdbc.password" value=""/>		
			<property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.SunONETransactionManagerLookup"/>
			<property name="hibernate.archive.autodetection" value="class, hbm" />
		</properties>		
	</persistence-unit>
</persistence>